<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="MapActivityTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ContentBlocksTheme">
    </style>

    <style name="ContentBlocksTheme.AudioPlayer">
        <item name="android:background">@color/audio_player_background_color</item>
        <item name="android:textColor">@color/audio_player_tint_color</item>
        <item name="audio_player_button_tint">@color/audio_player_tint_color</item>
    </style>

    <style name="ContentBlocksTheme.AudioPlayer.MovingBars">
        <item name="barColor">@color/audio_player_tint_color</item>
    </style>

    <style name="ContentBlocksTheme.AudioPlayer.ProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:minHeight">6dp</item>
        <item name="android:progressDrawable">@drawable/custom_song_progress_bar</item>
    </style>

</resources>