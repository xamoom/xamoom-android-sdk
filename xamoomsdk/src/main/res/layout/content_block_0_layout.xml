<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/rootLayout"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/standard_contentblock_padding"
              android:layout_marginEnd="@dimen/standard_contentblock_padding"
              android:layout_marginBottom="@dimen/contentblock_to_contentblock_margin"
              tools:ignore="WebViewLayout"
    android:background="@color/linkblock_facebook_background_color">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/contentblock_title_size"
        android:textColor="@color/black"
        android:background="@color/linkblock_googleplus_background_color"
        />

    <com.android.xamoom.htmltextview.HtmlTextView
        android:id="@+id/htmlTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/contentblock_children_margin"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:background="@color/linkblock_flickr_background_color"/>

</LinearLayout>