<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/contentblock_standard_padding"
    android:paddingEnd="@dimen/contentblock_standard_padding"
    android:layout_marginBottom="@dimen/contentblock_to_contentblock_margin"
    android:theme="@style/ContentBlocksTheme"
    tools:ignore="WebViewLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/coverImageCopyRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="4dp"
            android:textAlignment="viewEnd"
            android:textColor="@color/black"
            android:text="copyrright vlnvl fweblfl"
            />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            android:textSize="@dimen/contentblock_title_size"
            android:text="Titel Titel Titel Titel Titel Titel Titel Title Titel Titel Titel"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/event_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/event_time_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/event_time_imageview"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_time" />

            <TextView
                android:id="@+id/event_time_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/event_time_imageview"
                android:layout_marginStart="8dp"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:text="Mo. 23. Sept 18:00 - \nMo 23. Sep 19:00"
                android:maxLines="2"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/event_location_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/event_location_imageView"
                android:layout_width="13dp"
                android:layout_height="16dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_location" />

            <TextView
                android:id="@+id/event_location_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/event_location_imageView"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:ellipsize="end"
                android:textSize="16sp"
                android:text="The awesome location"
                android:maxLines="1"/>
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/contentblock_children_margin"
        android:textSize="16sp"
        android:textColor="@color/black"/>

</LinearLayout>