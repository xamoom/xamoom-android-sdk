<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/ContentBlocksTheme.Ebook"
    android:id="@+id/linkBlockLinearLayout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginStart="@dimen/standard_contentblock_padding"
    android:layout_marginEnd="@dimen/standard_contentblock_padding"
    android:layout_marginBottom="@dimen/contentblock_to_contentblock_margin">

    <ImageView
        android:id="@+id/iconImageView"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_book"
        android:contentDescription="@string/contentdescription_ebook_link_icon"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="bold"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/contentTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="14sp"
            />

    </LinearLayout>


</LinearLayout>